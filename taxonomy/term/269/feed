	&lt;li&gt;
		&lt;a href=&quot;https://drive.google.com/file/d/0B0w1lmHfuaQ3cDZ2S0dkZGdnV2c/edit?usp=sharing&quot; rel=&quot;nofollow&quot;&gt;Trajeto percorrido hoje (KMZ)&lt;/a&gt;&lt;/li&gt;
